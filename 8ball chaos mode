<script>
/* -------------------------------------------
    RANDOM HELPERS
--------------------------------------------*/

function rand(min, max) { return Math.floor(Math.random() * (max - min + 1)) + min; }

function randColor() {
  return `rgb(${rand(0,255)},${rand(0,255)},${rand(0,255)})`;
}

function randShadow() {
  return `${rand(-10,10)}px ${rand(-10,10)}px 0 ${randColor()}`;
}

function randGlow() {
  return `0 0 ${rand(4,18)}px ${randColor()}`;
}

/* -------------------------------------------
    ANSWER BANK
--------------------------------------------*/
let answers = [
  "It is certain",
  "Without a doubt",
  "You may rely on it",
  "Ask again later",
  "Cannot predict now",
  "Don't count on it",
  "My reply is no",
  "Outlook not so good",
  "Yes, definitely",
  "Very doubtful"
];

function updateAnswerList() {
  document.getElementById("answerList").innerHTML =
    "<strong>Current Answers:</strong><br>" + answers.join("<br>");
}
updateAnswerList();

/* -------------------------------------------
    RANDOMIZE THE ENTIRE BALL
--------------------------------------------*/
function fullyRandomizeBall() {
  const body = document.body;
  const ball = document.getElementById("magicBall");
  const circle = ball.querySelector(".white-circle");
  const eight = ball.querySelector(".eight");
  const aText = document.getElementById("answerText");

  body.style.background = randColor();

  ball.style.background = randColor();
  ball.style.boxShadow = `${randShadow()}, ${randShadow()}, inset ${randShadow()}, inset ${randShadow()}`;

  circle.style.background = randColor();
  circle.style.border = `${rand(2,8)}px solid ${randColor()}`;
  circle.style.boxShadow = `${randShadow()}, inset ${randShadow()}`;

  eight.style.color = randColor();
  eight.style.textShadow = `${randShadow()}, ${randShadow()}`;
  eight.style.transform = `rotate(${rand(-30,30)}deg) scale(${rand(8,14)/10})`;

  aText.style.background = randColor();
  aText.style.color = randColor();
  aText.style.border = `${rand(2,5)}px solid ${randColor()}`;
  aText.style.boxShadow = `${randGlow()}, ${randGlow()}, inset ${randGlow()}`;
  aText.style.transform = `rotate(${rand(-10,10)}deg) scale(${rand(8,15)/10}) translate(${rand(-20,20)}px, ${rand(-20,20)}px)`;
}

/* -------------------------------------------
    SHAKE BALL
--------------------------------------------*/
function shakeBall() {
  const question = document.getElementById("question").value.trim();
  if (!question) {
    alert("Ask something!");
    return;
  }

  const ball = document.getElementById("magicBall");
  const answerText = document.getElementById("answerText");
  answerText.textContent = "Consulting the chaos...";

  // RANDOM SHAKE SPEED
  const speed = rand(200, 900);
  ball.style.animation = `shake ${speed}ms`;

  setTimeout(() => {
    fullyRandomizeBall();

    const randomIndex = Math.floor(Math.random() * answers.length);
    answerText.textContent = answers[randomIndex];

    ball.style.animation = "";
  }, speed);
}

/* -------------------------------------------
    ADD ANSWERS WITH CHAOS
--------------------------------------------*/
function addAnswer() {
  let newAnswer = document.getElementById("newAnswer").value.trim();
  if (!newAnswer) {
    alert("Enter an answer!");
    return;
  }

  // Add chaos formatting
  const emojis = ["âœ¨","ðŸ’€","ðŸŒˆ","ðŸ”¥","ðŸŽ²","ðŸŒ€","âš¡","ðŸ‘¾","ðŸ§¿","ðŸŽ‰"];
  newAnswer = `${emojis[rand(0, emojis.length - 1)]} ${newAnswer} ${emojis[rand(0, emojis.length - 1)]}`;

  answers.push(newAnswer);
  updateAnswerList();

  document.getElementById("newAnswer").value = "";
}

</script>

